{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build" // or "dist" (depends on your frontend framework)
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js" // Routes all /api/* requests to your Express backend
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"       // Serves frontend files for all other routes
    }
  ]
}
